<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/feedback_layout">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    	<TextView android:layout_height="wrap_content" android:id="@+id/Duration" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:text="Duration" android:paddingRight="25dp"></TextView>
    	<TextView android:layout_height="wrap_content" android:id="@+id/CorrectAnswers" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:text="Correct Answers" android:paddingRight="25dp"></TextView>
    	<TextView android:layout_height="wrap_content" android:id="@+id/WrongAnswers" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:text="Wrong Answers" android:paddingRight="25dp"></TextView>
    	<TextView android:layout_height="wrap_content" android:id="@+id/Score" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:text="Score" android:paddingRight="25dp"></TextView>
    </LinearLayout>  
</ScrollView>
